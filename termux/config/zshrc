# Development
whois() {
  local original_dir=$(pwd)
  source .venv/bin/activate
  python3 truecaller.py "$*"
  deactivate
  cd "$original_dir"
}

alias yt='noglob yt_func'
yt_func() {
  local original_dir=$(pwd)
  source .venv/bin/activate
  python3 YT.py "$1"
  deactivate
  cd "$original_dir"
}

