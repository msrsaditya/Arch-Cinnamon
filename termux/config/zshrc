# Initialisation
sshd
termux-wake-lock
autoload -U colors && colors
lip() {
 ip=$(ifconfig 2>/dev/null \
      | grep -oE 'inet [0-9]+\.[0-9]+\.[0-9]+\.[0-9]+' \
      | awk '{print $2}' \
      | grep -v '^127\.' \
      | tail -n1)
 echo "$ip"
}
PS1='%B%{$fg[white]%}[%{$fg[white]%}%n%{$fg[white]%}@Android:%{$fg[white]%}$(lip)%{$fg[white]%} %{$fg[cyan]%}%~%{$fg[white]%}]%{$reset_color%}$%b '

